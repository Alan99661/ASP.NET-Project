@model List<DeveloperViewModel>

	<div class="container">

	@foreach(var dev in Model)
	{
	<div class="row">
			<h5 class="text-center display-4 light-text">@dev.Name</h5>
			<div class="d-flex flex-wrap justify-content-around">
			@foreach(var game in dev.Games.Take(3))
			{
				@Html.Partial("~/Views/Game/_GameCardLiteral.cshtml",game)
			}
			</div>
	</div>
	<a asp-action="GetById" asp-controller="Developer" asp-route-id="@dev.Id" class="btn btn-primary">More</a>
	}