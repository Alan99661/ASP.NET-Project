@model DeveloperAddModel;

<div class="form-container">
<h1 class="text-white">CreateDeveloper</h1>
<form asp-action="CreateDeveloperPost" asp-controller="Developer" method="post" enctype="multipart/form-data">
 <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GameIds">SelectGames</label>
        <select asp-for="GameIds" id="gameSelect" />
        <span asp-validation-for="GameIds" class="text-danger"></span>
    </div>	
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
</div>
@section Scripts{
    <script>
        var route = "/Game/GetGameSelectModel"
        var select = "#gameSelect"
        SelectAppend(route,select);
    </script>
}
