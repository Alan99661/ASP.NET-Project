@model PlatformAddModel


<form asp-action="CreatePlatformPost" asp-controller="Platform" method="post" enctype="multipart/form-data">
 <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GameIds">SelectGames</label>
        <select asp-for="GameIds" id="gameSelect" />
        <span asp-validation-for="GameIds" class="text-danger"></span>
    </div>	
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
@section Scripts{
    <script>
        var select = "#gameSelect"
        SelectGames(select);
    </script>
}