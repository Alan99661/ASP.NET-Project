@model List<PlatformViewModel>;

	<div class="container">

	@foreach(var platform  in Model)
	{
	<div class="row">
			<h5 class="text-center display-4 light-text">@platform.Name</h5>
			<div class="d-flex flex-wrap justify-content-around">
			@foreach(var game in platform.Games.Take(3))
				{
					@Html.Partial("~/Views/Game/_GameCardLiteral.cshtml",game)
				}
			</div>
	</div>
	<a asp-action="Platform" asp-controller="Genre" asp-route-id="@platform.Id" class="btn btn-primary">More</a>
	}
