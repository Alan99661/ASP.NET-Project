@model GameWithStatsViewModel;
@using Microsoft.AspNetCore.Identity;
@inject UserManager<User> UserManager

<div class="container-fluid bg-white">
  <div class="row">
    <div class="stacked">
      <img src="@Model.Game.BackgroundImageUrl" class="media" style="width:100%; aspect-ratio:16/9;" />
      <p>@Model.Game.Name</p>
      @if (User.IsInRole("Admin"))
      {
        <a asp-action="UpdateGame" asp-controller="Game" asp-route-id="@Model.Game.Id" class="btn btn-primary">Update</a>
        <a asp-action="DeleteGamePost" asp-controller="Game" asp-route-id="@Model.Game.Id" class="btn btn-primary">Delete</a>
      }
    </div>
  </div>

  <div class="row" style="padding:0.5%">
    <div class="col">
      <div class="row">
        <div class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            @foreach (var scr in Model.Game.Screenshots)
            {
              <div class="carousel-item">
                <img class="d-block" src="@scr.Url" alt="screenshot">
              </div>
            }
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
      <div class="row">
        <div class="card" style="margin-bottom:3rem;">
          <div class="card-header">
            Description
          </div>
          <div class="card-body">
            <blockquote class="blockquote mb-0">
              <p>@Model.Game.Description</p>
            </blockquote>
          </div>
        </div>
      </div>
      <div id="cardrow" class="row" style="min-height: fit-content;">
        <div class="col">
          <div class="d-flex justify-content-around">
            <div class="card" style="min-width: 29rem;min-height: 4rem;">
              <div class="card-header">
                Platforms
              </div>
              <ul class="list-group list-group-flush">
                @foreach (var platform in Model.Game.Platforms)
                {
                    <a asp-action="GetById" asp-controller="Platform" asp-route-id="@platform.Id" class="list-group-item list-group-item-action">@platform.Name</a>
                }
              </ul>
            </div>

            <div class="card" style="min-width: 29rem; min-height: 4rem;">
              <div class="card-header">
                Genres
              </div>
              <ul class="list-group list-group-flush">
                @foreach (var genre in Model.Game.Genres)
                {
                    <a asp-action="GetById" asp-controller="Genre" asp-route-id="@genre.Id" class="list-group-item list-group-item-action">@genre.Name</a>
                }
              </ul>
            </div>

            <div class="card" style="min-width: 29rem; min-height: 4rem;">
              <div class="card-header">
                Developers
              </div>
              <ul class="list-group list-group-flush">
                @foreach (var developer in Model.Game.Developers)
                {
                    <a asp-action="GetById" asp-controller="Developer" asp-route-id="@developer.Id" class="list-group-item list-group-item-action">@developer.Name</a>
                }
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="row" style="margin:1rem;">
        <div class="col">
          <div class="d-flex justify-content-around">
            <div class="card">
              <div class="card-header">
                Release Date
              </div>
              <div class="card-body">
                <blockquote class="blockquote mb-0">
                  <p>@Model.Game.ReleaseDate</p>
                </blockquote>
              </div>
            </div>

            <div class="card">
              <div class="card-header">
                Game Website
              </div>
              <div class="card-body">
                <blockquote class="blockquote mb-0">
                  <a href="@Model.Game.GameWebsite">@Model.Game.GameWebsite</a>
                </blockquote>
              </div>
            </div>

            <div class="card">
              <div class="card-header">
                Metacritic Rating
              </div>
              <div class="card-body">
                <blockquote class="blockquote mb-0">
                  <p>@Model.Game.MetacriticRating</p>
                </blockquote>
              </div>
            </div>
            @if (Model.TopGenres != null)
            {
              <div class="card" style="min-height: 2rem;">
                <div class="card-header">
                  Top in:
                </div>
                <ul class="list-group list-group-flush">
                  @foreach (var genre in Model.TopGenres)
                  {
                    <li class="list-group-item list-group-item-action">
                      <a asp-action="GetById" asp-controller="Developer" asp-route-id="@genre.Id">@genre.Name Genre</a>
                    </li>
                  }
                </ul>
              </div>
            }
          </div>
          <div class="row" style="margin:1rem">
            <div class="col d-flex flex-column nowrap">
              <a asp-action="CreateReview" asp-controller="Review" asp-route-id="@Model.Game.Id" class="btn btn-primary">Review</a>
              @foreach (var review in Model.Game.Reviews)
              {
                <div class="card" style="margin-top:1rem">
                  <div class="card-header">
                    @review.UserName
                  </div>
                  <div class="card-body">
                      @if(@review.Certified){
                          <p style="font-weight:400">Cirtified</p>
                      }
                    <blockquote class="blockquote mb-0">
                      <p>@review.Content</p>
                    </blockquote>
                    @if (review.User.Id == @UserManager.GetUserId(User) || User.IsInRole("Admin"))
                    {
                      <a asp-action="UpdateReview" asp-controller="Review" asp-route-id="@review.Id" class="btn btn-primary">Update Review</a>
                      <a asp-action="DeleteReview" asp-controller="Review" asp-route-id="@review.Id" class="btn btn-primary">Delete Review</a>
                    }

                                        @if (User.IsInRole("Admin"))
                                        {
                                           <a asp-action="CertifyReview" asp-controller="Review" asp-route-id="@review.Id" class="btn btn-primary"> Certify Review </a>
                                        }
                    </div>
                </div>
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>







