@model ScreenshotAddModel

<div class="form-container">
<h1 class="text-white">Create Screenshot</h1>
<form asp-action="CreateScreenshotPost" asp-controller="Screenshot" method="post" enctype="multipart/form-data">
 <div class="form-group">
        <label asp-for="Url"></label>
        <input asp-for="Url" class="form-control" />
        <span asp-validation-for="Url" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GameId">SelectGames</label>
        <select asp-for="GameId" id="gameSelect" />
        <span asp-validation-for="GameId" class="text-danger"></span>
    </div>	
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
</div>
@section Scripts{
    <script>
        var route = "/Game/GetGameSelectModel"
        var select = "#gameSelect"
        SelectAppend(route,select);
    </script>
}