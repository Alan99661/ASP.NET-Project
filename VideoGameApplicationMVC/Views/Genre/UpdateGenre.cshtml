@model GenreUpdateModel;

<form asp-action="UpdateGenrePost" asp-controller="Genre" method="post" enctype="multipart/form-data">
    <input hidden asp-for="Id" />
 <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GameIds">SelectGames</label>
        <select asp-for="GameIds" id="gameSelect" />
        <span asp-validation-for="GameIds" class="text-danger"></span>
    </div>	
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
</form>
@section Scripts{
    <script>
    var select = "#gameSelect";
    SelectGames(select);
    </script>
}